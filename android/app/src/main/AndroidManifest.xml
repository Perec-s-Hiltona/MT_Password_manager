<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mobile.technology.password_manager">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/icon_app_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_app_2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning,InnerclassSeparator"
        tools:replace="android:icon">

        <!-- for sugar mobile.technology.password_manager.ORM -->
        <meta-data
            android:name="DATABASE"
            android:value="pass_manager.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="false" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="mobile.technology.password_manager" /> <!-- Home -->
        <activity
            android:name=".activities.ActHome"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Passwords -->
        <activity
            android:name=".activities.ActPasswords"
            android:parentActivityName=".activities.ActHome"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".act_passwords" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- Add Password -->
        <activity
            android:name=".activities.ActAddPassword"
            android:parentActivityName=".activities.ActPasswords"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".act_add_password" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Add password phrase -->
        <activity android:name=".activities.ActAddPasswordKey"
            android:parentActivityName=".activities.ActPasswords"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".act_add_password_key"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>
</manifest>